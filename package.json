{
	"name": "next-prisma-graphql-template",
	"private": true,
	"scripts": {
		"dev": "concurrently -c 'blue,yellow,green' 'yarn:dev:docker' 'yarn:dev:next' 'yarn:dev:compile'",
		"dev:next": "next dev",
		"dev:compile": "yarn generate:graphql --watch",
		"dev:docker": "docker-compose up",
		"build": "next build",
		"vercel-build": "yarn generate && next build && prisma migrate deploy",
		"start": "next start",
		"generate": "yarn generate:prisma && yarn generate:graphql",
		"generate:prisma": "prisma generate",
		"generate:graphql": "graphql-codegen",
		"generate:theme-typings": "chakra-cli tokens src/theme.ts",
		"ci-check": "yarn format:list && concurrently -c 'yellow,green' yarn:lint yarn:tsc",
		"lint": "next lint",
		"tsc": "tsc --noEmit",
		"format": "prettier 'src/**/*.{js,jsx,ts,tsx,css}' --write",
		"format:list": "prettier --list-different 'src/**/*.{js,ts,jsx,tsx,css}'",
		"postinstall": "is-ci || husky install"
	},
	"dependencies": {
		"@apollo/client": "^3.5.6",
		"@chakra-ui/react": "^1.8.7",
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"@headlessui/react": "^1.4.2",
		"@heroicons/react": "^1.0.5",
		"@next-auth/prisma-adapter": "^1.0.1",
		"@pothos/core": "^3.6.0",
		"@pothos/plugin-scope-auth": "^3.7.0",
		"@pothos/plugin-validation": "^3.3.0",
		"@prisma/client": "^3.6.0",
		"apollo-server-core": "^3.5.0",
		"apollo-server-micro": "^3.5.0",
		"framer-motion": "^6.3.0",
		"graphql": "^16.3.0",
		"graphql-tag": "^2.12.6",
		"micro": "^9.3.4",
		"next": "^12.1.5",
		"next-auth": "^4.3.2",
		"nprogress": "^0.2.0",
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@boost/module": "^3.1.0",
		"@chakra-ui/cli": "^1.7.0",
		"@graphql-codegen/cli": "^2.3.0",
		"@graphql-codegen/named-operations-object": "^2.2.1",
		"@graphql-codegen/schema-ast": "^2.4.0",
		"@graphql-codegen/typescript": "^2.4.1",
		"@graphql-codegen/typescript-operations": "^2.2.1",
		"@graphql-codegen/typescript-react-apollo": "^3.2.2",
		"@types/node": "^16.11.11",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^18.0.5",
		"concurrently": "^7.1.0",
		"eslint": "^8",
		"eslint-config-next": "^12.1.5",
		"husky": "^7.0.4",
		"is-ci": "^3.0.1",
		"prettier": "^2.5.0",
		"prisma": "^3.6.0",
		"tsconfig-paths": "^3.12.0",
		"typescript": "^4.5.2",
		"zod": "^3.14.4"
	}
}
